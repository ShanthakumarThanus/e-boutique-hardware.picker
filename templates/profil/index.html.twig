{% extends 'base.html.twig' %}

{% block title %}Mon Profil{% endblock %}

{% block body %}
<div class="container mt-4">

    {% for message in app.flashes('success') %}
        <div class="alert alert-success">{{ message }}</div>
    {% endfor %}

    <h1>Mon Profil</h1>

    <ul class="list-group">
        <li class="list-group-item"><strong>Nom :</strong> {{ app.user.nom }}</li>
        <li class="list-group-item"><strong>Prénom :</strong> {{ app.user.prenom }}</li>
        <li class="list-group-item"><strong>Email :</strong> {{ app.user.email }}</li>
        <li class="list-group-item"><strong>Adresse :</strong> {{ app.user.adresse }}</li>
        <li class="list-group-item"><strong>Téléphone :</strong> {{ app.user.telephone }}</li>
    </ul>

    <div class="mt-4">
        <a href="{{ path('app_profil_modifier') }}" class="btn btn-primary">Modifier mes informations</a>
        <a href="{{ path('app_password_change') }}" class="btn btn-warning ms-2">Changer mon mot de passe</a>
        <a href="{{ path('mes_commandes') }}" class="btn btn-secondary ms-2">Mes commandes</a>
    </div>
</div>
{% endblock %}
