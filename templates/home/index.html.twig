                <div class="card mb-4 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">{{ article.nom }}</h5>
                        <p class="card-text">{{ article.description }}</p>
                        <p class="card-text"><strong>{{ article.prix }} â‚¬</strong></p>
                    </div>
                </div>
            </div>
        {% else %}
