{% extends 'base.html.twig' %}

{% block title %}Saisie de vos informations{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h2 class="mb-4 text-center">Saisie de vos informations</h2>

            {% for message in app.flashes('success') %}
                <div class="alert alert-success">{{ message }}</div>
            {% endfor %}

            <div class="card shadow-sm">
                <div class="card-body">
                    {{ form_start(form) }}

                    {% for field in form %}
                        {% if field.vars.name != '_token' %}
                            <div class="mb-3">
                                {{ form_label(field) }}
                                {{ form_widget(field, { attr: { class: 'form-control' } }) }}
                                {{ form_errors(field) }}
                            </div>
                        {% endif %}
                    {% endfor %}

                    <p class="fw-bold mt-3">Total de la commande : {{ form.vars.value.total }} â‚¬</p>

                    <div class="text-end">
                        <button type="submit" class="btn btn-primary">Valider et Payer</button>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
